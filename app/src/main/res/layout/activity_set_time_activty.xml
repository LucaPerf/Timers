<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetTimeActivty">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/et_Houres"
                    style="@style/Et_Houres_Minutes_Seconds"
                    android:text="ORE:" />

                <TextView
                    android:id="@+id/tv_Houres2"
                    style="@style/Tv_Houres_Minutes_Seconds"
                    android:gravity="right"
                    android:text="0" />
                <TextView
                    android:id="@+id/tv_Houres1"
                    style="@style/Tv_Houres_Minutes_Seconds"
                    android:text="0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/et_Minutes"
                    style="@style/Et_Houres_Minutes_Seconds"
                    android:text="MINUTI:" />
                <TextView
                    android:id="@+id/tv_Minutes2"
                    style="@style/Tv_Houres_Minutes_Seconds"
                    android:gravity="right"
                    android:text="0" />
                <TextView
                    android:id="@+id/tv_Minutes1"
                    style="@style/Tv_Houres_Minutes_Seconds"
                    android:text="0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/et_Seconds"
                    style="@style/Et_Houres_Minutes_Seconds"
                    android:text="SECONDI:" />
                <TextView
                    android:id="@+id/tv_Seconds2"
                    style="@style/Tv_Houres_Minutes_Seconds"
                    android:gravity="right"
                    android:text="0" />
                <TextView
                    android:id="@+id/tv_Seconds1"
                    style="@style/Tv_Houres_Minutes_Seconds"
                    android:text="0" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button1"
                    style="@style/ButtonRow"
                    android:text="1" />

                <Button
                    android:id="@+id/button2"
                    style="@style/ButtonRow"
                    android:text="2" />

                <Button
                    android:id="@+id/button3"
                    style="@style/ButtonRow"
                    android:text="3" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button4"
                    style="@style/ButtonRow"
                    android:text="4" />

                <Button
                    android:id="@+id/button5"
                    style="@style/ButtonRow"
                    android:text="5" />

                <Button
                    android:id="@+id/button6"
                    style="@style/ButtonRow"
                    android:text="6" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button7"
                    style="@style/ButtonRow"
                    android:text="7" />

                <Button
                    android:id="@+id/button8"
                    style="@style/ButtonRow"
                    android:text="8" />

                <Button
                    android:id="@+id/button9"
                    style="@style/ButtonRow"
                    android:text="9" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonCanc"
                    style="@style/ButtonRow"
                    android:layout_weight="1"
                    android:text="CANC"/>

                <Button
                    android:id="@+id/button0"
                    style="@style/ButtonRow"
                    android:text="0" />

                <Button
                    android:id="@+id/buttonBack"
                    style="@style/ButtonRow"
                    android:text="back"/>
            </TableRow>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="25dp"
                android:text="SALVA"/>

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elimina"
                android:textSize="17dp"
                android:textAlignment="textEnd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_password"/>
        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>